<p id="notice"><%= notice %></p>
<div class="container">

  <h1 class="product-title">Watches</h1>

  <table>
    <thead>
      <tr>
        <th>View</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%if product.picture.present? %>
            <%= image_tag(product.picture, :style => "height: 50px;") %>
            <% end %>
          </td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td>$<%= product.price_in_cents %>.00</td>
          <td id="productdescription" class="btn grey"><%= link_to 'Description', product %></td>
          <!--<td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->



          <td>
          <%= form_tag carts_path(product_id:product.id) do %>
            <td><%= submit_tag "Add to Cart", class: 'btn'%></td>
          <% end %>
          </td>




          <td>
            <%= form_tag charges_path do %>
              <article>
                <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                <% end %>
              </article>

            <% end %>
          </td>


        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

